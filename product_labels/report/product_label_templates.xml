<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <template id="label_57x35">
        <table class="table" style="margin: 0; padding: 0;">
            <tbody style="border: 0;">
                <tr height="144px" style="border:0;margin:0;padding:0;">
                    <td class="col-xs-4 text-center" style="border:0;margin:0;padding:0;">
                        <div
                            style="overflow:hidden; height:65px !important; padding: 5px 5px 0; line-height: 1.2;">
                            <span t-field="label.product_id.name" style="line-height: 1.2;" />
                            <span t-if="label.product_id.product_template_attribute_value_ids"
                                t-esc="u', '.join(map(lambda x: x.attribute_line_id.attribute_id.name + u': ' + x.name, label.product_id.product_template_attribute_value_ids))"
                                class="badge" />
                        </div>
                        <div
                            style="width: 100%; padding: 0; margin: 0; font-size: 21px; font-weight: bold;">
                            <span t-if="label.product_id.currency_id.position == 'before'"
                                t-field="label.product_id.currency_id.symbol" />
                            <span t-field="label.product_id.lst_price" />
                            <span t-if="label.product_id.currency_id.position == 'after'"
                                t-field="label.product_id.currency_id.symbol" />
                        </div>
                        <div t-if="label.product_id.default_code"
                            style="width: 100%; padding: 0; margin: 0; font-size: 12px;">
                            <span t-field="label.product_id.default_code" />
                        </div>
                        <t t-if="label.product_id.barcode">
                            <div t-esc="label.product_id.barcode"
                                t-options="{'widget': 'barcode', 'symbology': 'auto', 'img_style': 'overflow: hidden; width: 100%; height: 2.0rem;', 'humanreadable': label.wizard_id.humanreadable}"
                                class="px-1" />
                        </t>
                    </td>
                </tr>
            </tbody>
        </table>
    </template>

    <template id="report_product_label_57x35_template">
        <t t-call="web.html_container">
            <t t-call="web.basic_layout">
                <t t-set="count" t-value="0" />
                <div class="page">
                    <div class="oe_structure" />
                    <t t-foreach="docs" t-as="label">
                        <t t-set="qty" t-value="1" />
                        <t t-if="label.qty">
                            <t t-set="qty" t-value="label.qty" />
                        </t>
                        <t t-foreach="list(range(qty))" t-as="index_qty">
                            <div t-if="count % 21 == 0" style="page-break-after:always;" />
                            <div t-if="count % 3 == 0" style="clear:both;" />
                            <div
                                t-att-style="'width: 233px; float: left; height: 145px; margin: 0 4px 4px; border: {};'.format('%dpx solid #777;' % label.wizard_id.border_width if label.wizard_id.border_width else '0')">
                                <t t-call="product_labels.label_57x35" />
                            </div>
                            <t t-set="count" t-value="count+1" />
                        </t>
                    </t>
                </div>
            </t>
        </t>
    </template>

    <template id="report_product_label_60x40_discount_template">
        <t t-call="web.html_container">
            <t t-call="web.basic_layout">
                <t t-foreach="docs" t-as="label">
                    <t t-set="qty" t-value="1" />
                    <t t-if="label.qty" t-set="qty" t-value="label.qty" />
                    <t t-foreach="list(range(qty))" t-as="index_qty">
                        <div class="page" style="page-break-after: always;">
                            <div style="height: 138px !important; width: 188px !important;">
                                <table class="table"
                                    t-att-style="'height: 100%; border: {};'.format('%dpx solid #777;' % label.wizard_id.border_width if label.wizard_id.border_width else '0')">
                                    <tbody style="border: 0;">
                                        <tr height="138px" style="border: 0;">
                                            <td class="text-center"
                                                style="padding: 0; margin: 0; border: 0;">
                                                <!-- Name and logo -->
                                                <div
                                                    style="width: 188px; overflow: hidden; height: 42px; margin-bottom: 2px;">
                                                    <div
                                                        style="float: left; width: 138px; font-size: 13px; line-height: 1.0; vertical-align: top; text-align: left;">
                                                        <span t-field="label.product_id.name"
                                                            style="line-height: 1.0;" />
                                                    </div>
                                                    <div
                                                        style="float: right; width: 46px; height: 46px;">
                                                        <img
                                                            t-att-src="'/product_labels/static/src/img/logo.png'"
                                                            style="width: 46px; height: 46px;" />
                                                    </div>
                                                </div>

                                                <!-- Barcode -->
                                                <div
                                                    style="width: 100%; overflow: hidden; height: 48px !important; margin-bottom: 2px;">
                                                    <div
                                                        style="width: 100%; font-size: 18px; font-weight: bold; line-height: 1.0; text-align: right;">
                                                        <t t-if="label.product_id.barcode"
                                                            style="height: 16px !important;">

                                                            <!-- Product code (human readable text) -->
                                                            <div
                                                                t-if="not label.wizard_id.humanreadable"
                                                                t-field="label.product_id.barcode"
                                                                style="font-size: 11px; font-weight: normal; text-align: center; margin-left: 2px; margin-top: 2px; margin-bottom: 4px;" />

                                                            <!-- Barcode image -->
                                                            <div t-esc="label.product_id.barcode"
                                                                style="margin-left: 2px; margin-top: 4px;"
                                                                t-options="{'widget': 'barcode', 'quiet': 0, 'symbology': 'auto', 'img_style': 'overflow: hidden; width: 100%; height: 32px;', 'humanreadable': label.wizard_id.humanreadable}" />
                                                        </t>
                                                    </div>
                                                </div>


                                                <!-- Prices -->
                                                <div
                                                    style="width: 100%; overflow: hidden; height: 60px !important; display: flex; align-items: flex-end;">
                                                    <div
                                                        style="float: left; width: 35%; display: flex; flex-direction: column; justify-content: flex-end; height: 100%;">
                                                        <div
                                                            style="width: 100%; font-size: 15px; font-weight: 900; line-height: 1.0; text-align: right; margin-bottom: 1px;">
                                                            <span>
                                                                <p style="font-size: 14px;">WAS قبل</p>
                                                                <img
                                                                    t-att-src="'/product_labels/static/src/img/Dirham.png'"
                                                                    style="width: 12px; height: 12px;" />
                                                            </span>
                                                            <s t-field="label.product_id.lst_price" />
                                                        </div>
                                                    </div>
                                                    <div
                                                        style="float: right; width: 65%; display: flex; flex-direction: column; justify-content: flex-end; height: 100%;">
                                                        <div
                                                            style="width: 100%; font-size: 20px; font-weight: 900; line-height: 1.0; text-align: right; margin-bottom: 1px;">
                                                            <span>
                                                                <p style="font-size: 14px;">NOW الأن</p>
                                                                <img
                                                                    t-att-src="'/product_labels/static/src/img/Dirham.png'"
                                                                    style="width: 14px; height: 14px;" />
                                                            </span>
                                                            <t t-set="pricelist_id" t-value="1" />
                                                            <t t-set="pricelist_record"
                                                                t-value="env['product.pricelist'].browse(pricelist_id)" />
                                                            <t t-set="prices_dict"
                                                                t-value="pricelist_record._get_product_price(label.product_id, 1)" />
                                                            <span t-esc="prices_dict" />
                                                        </div>
                                                    </div>
                                                </div>
                                            </td>
                                        </tr>
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </t>
                </t>
            </t>
        </t>
    </template>

